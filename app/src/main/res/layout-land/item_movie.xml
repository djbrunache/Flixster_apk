<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="Movie"
            type="com.codepath.bourdeau_melinda.flixsterapk.models.Movie" />
    </data>
    <RelativeLayout
        android:id="@+id/container"
        android:transitionName="transcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:imageUrl="@{Movie.back}"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:fontFamily="cursive"
            android:textColor="#F6F0F0"
            android:textSize="24sp"
            android:text="@{Movie.title}"
            tools:text="Fast Furious Presents: Hobbs Shaw" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:fontFamily="casual"
            android:textColor="#F6F2F2"
            android:text="@{Movie.overview}"
            tools:text="A spinoff of The Fate of the Furious, focusing on Johnson's US Diplomatic Security Agent Luke Hobbs forming an unlikely alliance with Statham's Deckard Shaw" />

    </RelativeLayout>
</layout>